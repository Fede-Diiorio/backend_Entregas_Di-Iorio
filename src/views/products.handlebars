<div class="container">
    <h2>Productos</h2>

    <p class="margin">PÃ¡gina actual: {{products.page}}</p>
    <ul>
        {{#each products.docs}}
        <li>
            <div class="products">
                <h4>{{this.title}}</h4>
                <p>Precio: {{this.price}}</p>
                <p>Stock: {{this.stock}}</p>
                <a href="http://localhost:8080/api/products/{{this._id}}">Ver</a>
            </div>
        </li>
        {{/each}}
    </ul>

    <div class="container">
        {{#if products.hasPrevPage}}
        <a href="/api/products?page={{products.prevPage}}">Anterior</a>
        {{/if}}

        {{#if products.hasNextPage}}
        <a href="/api/products?page={{products.nextPage}}">Siguiente</a>
        {{/if}}
    </div>
</div>