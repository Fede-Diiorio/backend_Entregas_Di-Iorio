<div class="margin container">
    <form action="/users/login" method="post" enctype="application/x-www-form-urlencoded">
        <label for="_email">Email:</label>
        <input type="email" name="email" id="_email" />

        <label for="_pass">Contraseña:</label>
        <input type="password" name="password" id="_pass" />

        <button type="submit">Ingresar</button>
    </form>

    {{#if isProduction}}
    <a class="margin" href="/api/users/githubcallback">Entrar con Github</a>
    {{/if}}
    <a class="margin" href="/users/resetPassword">Restablecer contraseña</a>
    <a class="margin" href="/users">Volver</a>
</div>